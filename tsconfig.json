{
    "compilerOptions": {
        "module": "ES2020",
        "moduleResolution": "Node",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "lib": ["ES2020", "dom"],
        "paths": {
            "durandal/*": ["node_modules/durandal-es6/*"]
        },
        "baseUrl": ".",
        "rootDirs": ["app/assets/javascripts"]
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "**/*.spec.ts"
    ],
    "target": "ES2020"
}
